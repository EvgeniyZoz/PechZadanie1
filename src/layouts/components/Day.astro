---
interface Props {
  day: string;
  month: string;
  isActive?: boolean;
  className?: string;
}

const { day, month, isActive = false, className = "" } = Astro.props;
---

<div class={`flex flex-col items-center justify-center w-11 h-14 rounded-2xl border-2 leading-5 flex-shrink-0 ${isActive ? 'border-secondary text-secondary' : 'border-darkest text-darkest'} ${className}`}>
  <div>{day}</div>
  <div>{month}</div>
</div>
